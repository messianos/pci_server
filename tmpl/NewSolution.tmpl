
<% c++ #include "logic/ViewContent.h" %>

<% skin pci_skin %>
	<% view new_solution_view uses ViewContent::NewSolutionContent extends template_view %>
	
	
		<% template css_links() %>
			<% include template_view::css_links() %>
			<link href="/css/new_solution.css" rel="stylesheet" type="text/css" />
		<% end template %>
		
		
		<% template js_links() %>
			<% include template_view::js_links() %>
			<script src="/lib/ckeditor/ckeditor.js"></script>
		<% end template %>
		
		
		<% template javascript_code() %>
			<% include template_view::javascript_code() %>
			<script>
			$(document).ready(function(){
				configureTexteditor('texteditor');
			});
			</script>
		<% end template %>
		
	
		<% template page_content() %>
			<% include template_view::header_bar() %>
			<div class="container-fluid">
				<% include template_view::navigation_menu() %>
				<div class="box_container">
					<% include create_solution_form(problem_id) %>
				</div>
			</div>
		<% end template %>
		
	
	<% end view %>
<% end skin %>
