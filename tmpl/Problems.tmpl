
<% c++ #include "ViewContent.h" %>

<% skin pci_skin %>
	<% view problems_view uses ViewContent::ProblemsContent extends template_view %>
	
	
		<% template css_links() %>
			<% include template_view::css_links() %>
			<link href="/css/problems.css" rel="stylesheet" type="text/css" />
		<% end template %>
	
	
		<% template javascript_code() %>
			$(document).ready(function() {
				$('#pci_navigation_menu_problems_button').addClass('active');
			});
		<% end template %>
	
	
		<% template page_content() %>
			<% include template_view::header_bar() %>
			<% include template_view::navigation_menu() %>
			<div id="pci_problems_main_container">
				<div class="pci_box_container">
					<% if user_signed_in %>
						<div id="pci_problems_toolbar_container">
							<a href="<% url "/new_problem" %>">
								<div class="pci_button_icon pci_problems_toolbar_button" id="pci_problems_toolbar_new_problem_button">
									Nuevo problema
								</div>
							</a>
						</div>
						<div class="pci_horizontal_line"></div>
					<% end %>
					<% foreach problem in *problems %>
						<% item %>
							<a class="pci_box_description" href="<% url "/problem" using problem->id %>">
								<div class="pci_box_description pci_problems_problem_description">
									<%= problem->description %><br /><%= problem->creation_datetime->toString("%d/%m/%Y %H:%M:%S") %>
								</div>
							</a>
						<% end %>
					<% empty %>
						No se encontraron problemas
					<% end %>
				</div>
			</div>
		<% end template %>
	
	
	<% end view %>
<% end skin %>
